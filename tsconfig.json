{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "esnext", "esnext.asynciterable", "webworker", "es6"],
    "alwaysStrict": true,
    "allowJs": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "test/**/*.ts",
    "test/**/*.json"
  ],
  "exclude": ["node_modules", "dist"]
}
